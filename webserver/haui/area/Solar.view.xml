<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.area.Solar" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form">
	<Page id="SolarPage"
		title="Solaranlage"
		showNavButton="true"
		navButtonPress="handleNavButtonPress">
		<headerContent>
			<Button icon="sap-icon://refresh" press="handleRefreshPress" />
		</headerContent>
		<List>
			<items>
				<StandardListItem title="Aktuell produzierter Strom" info="{/current} {/currentUnit}" infoState="Success" />
				<StandardListItem title="Tages Produktion" info="{/day} {/dayUnit}" infoState="Success" />
				<StandardListItem title="Monats Produktion" info="{/month} {/monthUnit}" infoState="Success" />
				<StandardListItem title="Jahres Produktion" info="{/year} {/yearUnit}" infoState="Success" />
				<StandardListItem title="Gesammt produzierter Strom" info="{/total} {/totalUnit}" infoState="Success" />
			</items>
		</List>		
	</Page>
</mvc:View>