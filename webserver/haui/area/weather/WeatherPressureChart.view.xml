<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.area.weather.WeatherPressureChart" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:ma="sap.makit" xmlns:l="sap.ui.layout">
	<Page id="pressureChartPage"
		title="Luftdruck"
		showNavButton="true"
		navButtonPress="handleNavButtonPress">
		
		<ma:Chart id="pressureChart" height="90%" width="100%" type="Line"
			rows="{/pressureValues}" showRangeSelector="true" showTableView="false"
			showTotalValue="false" >
			<ma:category>
				<ma:Category column="measurementdate" displayName="Datum und Zeit" />
			</ma:category>
			<ma:values>
                <ma:Value expression="pressure" displayName="Luftdruck mbar" />
			</ma:values>
            
			<ma:columns>
				<ma:Column name="pressure" value="{pressure}" type="number" />
				<ma:Column name="measurementdate" value="{path: 'timestamp', formatter: 'haui.Util.dateFormatter'}" />
			</ma:columns>
		</ma:Chart>
	
	</Page>
</mvc:View>