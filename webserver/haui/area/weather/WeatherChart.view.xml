<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.area.weather.WeatherChart" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:ma="sap.makit" xmlns:l="sap.ui.layout">
	<Page id="weatherChartPage"
		showNavButton="true"
		navButtonPress="handleNavButtonPress">
		<SegmentedButton selectedButton="monthButton">
			<Button id="allButton" text="Alle Jahre" press="handleAllPress" />
			<Button id="yearButton" press="handleYearPress" />
			<Button id="monthButton" press="handleMonthPress" />
			<Button id="dayButton" press="handleDayPress" />
        </SegmentedButton>
		
		<ma:Chart id="weatherChart" height="85%" width="100%" type="Line"
			rows="{/weatherValues}" showRangeSelector="true" showTableView="false"
			showTotalValue="false" tap="chartPressed" >
			<ma:category>
				<ma:Category column="time" displayName="Zeitraum" />
			</ma:category>
			<ma:values>
				<ma:Value expression="value" />
			</ma:values>
			<ma:columns>
				<ma:Column name="value" value="{value}" type="number" />
				<ma:Column name="time" value="{time}" />
			</ma:columns>
		</ma:Chart>
	</Page>
</mvc:View>