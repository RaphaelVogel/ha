<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.Overview" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="Heim Automation" enableScrolling="false">
		<headerContent>
			<Button icon="sap-icon://refresh" press="refresh" />
		</headerContent>
        <TileContainer id="tileContainer" width="100%">
			<StandardTile
                id="Weather"
                icon="sap-icon://temperature"
                title="Wetterdaten: Temperatur, Luftdruck und Luftfeutigkeit"
                info="Außenbereich"
                number="{/temperature}"
                numberUnit="Grad"
                press="handleTilePress"/>
            <StandardTile
                id="Alarm"
                icon="sap-icon://alert"
                title="Alarmanlage steuern"
                type="Monitor"
                info="Alles Ok"
                infoState="Success"
                press="handleTilePress"/>
		</TileContainer>
	</Page>
</mvc:View>