<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View controllerName="haui.Overview" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="Heim Automation" enableScrolling="false">
        <TileContainer id="tileContainer" width="100%">
			<StandardTile
                id="Weather"
                icon="sap-icon://temperature"
                title="Temperatur Luftdruck und Luftfeutigkeit"
                info="Außenbereich"
                number="{/temperature}"
                numberUnit="{/temperatureUnit}"
                press="handleTilePress"/>
            <StandardTile
                id="Alarm"
                icon="sap-icon://alert"
                title="Alarmanlage steuern"
                info="Alles Ok"
                infoState="Success"
                press="handleTilePress"/>
			<StandardTile
                id="Solar"
                icon="sap-icon://home"
                title="Solaranalge"
                number="{/current}"
                numberUnit="{/currentUnit}"
                press="handleTilePress"/>              
		</TileContainer>
	</Page>
</mvc:View>